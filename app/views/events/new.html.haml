%h1 Record an event

.form
  = form_for @event do |f|
    = render "shared/error_messages", object: f.object
    .field
      .field-label
        = f.label :description
      = f.text_field :description
    .field
      .field-label
        = f.label :completed_at, "Completed on"
      = f.date_select :completed_at
    .field
      = f.hidden_field :target_id, value: params[:target]
    .form-actions
      = f.submit "Record event", class: "btn btn-primary"